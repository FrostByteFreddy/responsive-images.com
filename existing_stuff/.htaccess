#==================================================================
# 1. AUTHENTICATION
# Your existing rules to password-protect the directory.
#==================================================================
# AuthType Basic
# AuthName "Restricted Area"
# AuthUserFile /home/cefikuqu/public_html/.htpasswd
# Require valid-user

#==================================================================
# 2. GLOBAL SECURITY
# Prevents listing the contents of any directory.
#==================================================================
Options -Indexes

#==================================================================
# 3. FILE PROTECTION
# Prevent web access to sensitive files like this one.
#==================================================================
<Files ~ "\.(htaccess)$">
    Require all denied
</Files>

#==================================================================
# 4. AJAX & HOTLINKING PROTECTION
# Block requests to your processing script that don't come
# from your own website.
#==================================================================
RewriteEngine On

RewriteCond %{REQUEST_URI} ^/process\.php$ [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?responsive-images\.com [NC]
RewriteCond %{HTTP_REFERER} !^$
RewriteRule .* - [F]